<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <data>

        <import type="android.view.View"/>

        <variable
            name="element"
            type="com.framgia.mobileprototype.data.model.Element"/>

        <variable
            name="transition"
            type="com.framgia.mobileprototype.linkto.TransitionAdapter.Transition"/>

        <variable
            name="handler"
            type="com.framgia.mobileprototype.linkto.TransitionItemActionHandler"/>
    </data>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="@dimen/dp_170"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/dp_8"
        android:clickable="@{!transition.name.equals(element.transition)}"
        android:foreground="?android:attr/selectableItemBackground">

        <TextView
            android:id="@+id/text_transition_normal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:gravity="center"
            android:text="@{transition.name}"
            android:textColor="@color/cardview_dark_background"
            android:textSize="@dimen/sp_14"/>

        <TextView
            android:id="@+id/text_transition_chosen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="@{transition.name}"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_14"
            android:visibility="@{transition.name.equals(element.transition) ? View.VISIBLE : View.GONE}"/>
    </android.support.v7.widget.CardView>
</layout>
