<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View"/>

        <variable
            name="presenter"
            type="com.framgia.mobileprototype.introduction.IntroductionContract.Presenter"/>

        <variable
            name="introductionActivity"
            type="com.framgia.mobileprototype.introduction.IntroductionActivity"/>

        <variable
            name="listener"
            type="android.support.v4.view.ViewPager.OnPageChangeListener"/>
    </data>

    <RelativeLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/dp_16"
        android:background="@android:color/white"
        tools:context="com.framgia.mobileprototype.introduction.IntroductionActivity">

        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager_introduction"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/item_view_pager_introduction"
            app:adapter="@{introductionActivity.viewPagerAdapter}"
            app:listener="@{listener}"/>

        <RelativeLayout
            android:id="@+id/relative_indicator"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_55"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/dp_5"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/linear_dot"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:orientation="horizontal"/>

            <TextView
                android:id="@+id/text_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_centerVertical="true"
                android:text="@string/action_start"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold"
                android:visibility="@{introductionActivity.canStart ? View.VISIBLE : View.GONE}"
                android:onClick="@{() -> presenter.openProjectsScreen()}"/>

        </RelativeLayout>

    </RelativeLayout>
</layout>
