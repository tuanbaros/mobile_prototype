<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.framgia.mobileprototype">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity android:name=".introduction.IntroductionActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".projects.ProjectsActivity"
            android:label="@string/title_project"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />
        <activity
            android:name=".projectdetail.ProjectDetailActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".about.AboutActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".mockdetail.MockDetailActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".linkto.LinkToActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".demo.DemoActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".draw.DrawActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".demo.LandcapeDemoActivity"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".mockdetail.LandcapeMockDetailActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".linkto.LandspaceLinkToActivity"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".draw.LandscapeDrawActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".crop.LandscapeCropActivity"
            android:screenOrientation="landscape"
            android:theme="@style/Base.Theme.AppCompat" />
        <activity
            android:name=".library.LibraryActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".library.IconActivity"
            android:label="@string/title_icons"
            android:screenOrientation="portrait" />
        <activity
            android:name=".login.LoginActivity"
            android:label="@string/title_login" />
        <activity
            android:name=".explore.ExploreActivity"
            android:label="@string/title_explore"
            android:screenOrientation="portrait" />
        <activity android:name=".comment.CommentActivity"/>
    </application>

</manifest>
