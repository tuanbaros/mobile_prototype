<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.framgia.mobileprototype"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".introduction.IntroductionActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".projects.ProjectsActivity"
            android:label="@string/title_project"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat"/>
        <activity
            android:name=".projectdetail.ProjectDetailActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".about.AboutActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".mockdetail.MockDetailActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".linkto.LinkToActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".demo.DemoActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".draw.DrawActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".demo.LandcapeDemoActivity"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".mockdetail.LandcapeMockDetailActivity"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name=".linkto.LandspaceLinkToActivity"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".draw.LandscapeDrawActivity"
            android:screenOrientation="landscape" />
    </application>

</manifest>
